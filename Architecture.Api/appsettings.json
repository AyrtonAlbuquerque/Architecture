{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=database; User Id=user; Password=password; Application Name=Architecture; Integrated Security=false; TrustServerCertificate=True;"
  },
  "AppSettings": {
    "Secret": "d3MtbW9iaWxlLXNhdWRlLXN1cGVyc2VjcmV0cGFzc3dvcmQ=",
    "SessionTime": "1",
    "Environment": "Development"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "../logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*"
}